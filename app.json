{
  "expo": {
    "name": "Sale Buddy",
    "slug": "BudgetApp",
    "version": "3.0.3",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "CUSTOM: Allow Sale Buddy to access the microphone",
          "speechRecognitionPermission": "CUSTOM: Allow Sale Buddy to securely recognize user speech"
        }
      ],
      "@config-plugins/react-native-blob-util",
      "@config-plugins/react-native-pdf"
    ],
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "auto",
      "backgroundColor": "#6f88c7"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "buildNumber": "3.0.3",
      "supportsTablet": true
    },
    "android": {
      "versionCode": 9,
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.iappc.BudgetApp",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.DOWNLOAD_WITHOUT_NOTIFICATION",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "expo": {
      "userInterfaceStyle": "automatic"
    },
    "extra": {
      "eas": {
        "projectId": "773eeae0-c2b6-4a4e-b2a2-09b2bd8049a0"
      }
    }
  }
}
